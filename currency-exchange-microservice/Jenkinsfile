pipeline {
	agent {docker{ image 'maven:3.6.3'}}
	stages {
		stage ("Build"){
			steps{

				sh "mvn --version"
				echo "Build"
			
			}
		}
	stage ("Test"){
			
			steps{
			
				echo "Test"
			
			}
		}
	stage ("Integration Testing"){
			
			steps{

				echo "Integration Test"
			
			}
		}	

		

	}
	post{
			always{

				echo "I am awesome. It worked!"
			}
			success{
				
				echo "Success!!"
			}
			failure{

				echo "Oops! Something went wrong. Please try again."
			}
		}
	
}